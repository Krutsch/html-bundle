{
  "name": "html-bundle",
  "version": "1.0.1",
  "description": "A very simple bundler for HTML SFC",
  "type": "module",
  "bin": "./dist/bundle.js",
  "main": "./dist/bundle.js",
  "types": "./dist/bundle.d.ts",
  "exports": {
    "import": "./dist/bundle.js",
    "default": "./dist/bundle.js"
  },
  "scripts": {
    "start": "tsc",
    "update": "npx npm-check-updates -u && npx typesync && npm i && npm outdated"
  },
  "keywords": [
    "bundler",
    "SFC",
    "HTML",
    "TypeScript",
    "esbuild",
    "hydro-js"
  ],
  "author": "Fabian Krutsch <f.krutsch@gmx.de> (https://krutsch.netlify.app/)",
  "license": "MIT",
  "devDependencies": {
    "@types/csso": "^3.5.1",
    "@types/glob": "^7.1.3",
    "@types/html-minifier": "^4.0.0",
    "typescript": "^4.1.3"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Krutsch/html-bundle.git"
  },
  "bugs": "https://github.com/Krutsch/html-bundle/issues",
  "dependencies": {
    "chokidar": "^3.4.3",
    "csso": "^4.2.0",
    "esbuild": "^0.8.28",
    "glob": "^7.1.6",
    "html-minifier": "^4.0.0"
  }
}

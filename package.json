{
  "name": "html-bundle",
  "version": "5.4.18",
  "description": "A very simple bundler for HTML SFC",
  "bin": "./cjs/bundle.js",
  "scripts": {
    "start": "tsc && tsc -p tsconfig.cjs.json",
    "update": "npx npm-check-updates -u && npx typesync && npm i && npm outdated"
  },
  "keywords": [
    "bundler",
    "SFC",
    "HTML",
    "TypeScript",
    "esbuild",
    "hydro-js"
  ],
  "author": "Fabian Krutsch <f.krutsch@gmx.de> (https://krutsch.netlify.app/)",
  "license": "MIT",
  "devDependencies": {
    "@types/cssnano": "^4.0.1",
    "@types/glob": "^7.1.4",
    "@types/html-minifier-terser": "^6.0.0",
    "@types/parse5": "^6.0.1",
    "@types/postcss-load-config": "^3.0.1",
    "typescript": "^4.4.3"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Krutsch/html-bundle.git"
  },
  "bugs": "https://github.com/Krutsch/html-bundle/issues",
  "dependencies": {
    "@web/parse5-utils": "^1.3.0",
    "chokidar": "^3.5.2",
    "critical": "^4.0.1",
    "cssnano": "^5.0.8",
    "esbuild": "^0.13.0",
    "fastify": "^3.21.5",
    "fastify-static": "^4.2.3",
    "glob": "^7.1.7",
    "html-minifier-terser": "^6.0.2",
    "parse5": "^6.0.1",
    "postcss": "^8.3.7",
    "postcss-load-config": "^3.1.0"
  }
}

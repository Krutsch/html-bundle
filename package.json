{
  "name": "html-bundle",
  "version": "5.2.2",
  "description": "A very simple bundler for HTML SFC",
  "type": "module",
  "bin": "./dist/bundle.js",
  "main": "./dist/bundle.js",
  "types": "./dist/bundle.d.ts",
  "exports": {
    "import": "./dist/bundle.js",
    "default": "./dist/bundle.js"
  },
  "scripts": {
    "start": "tsc",
    "update": "npx npm-check-updates -u && npx typesync && npm i && npm outdated"
  },
  "keywords": [
    "bundler",
    "SFC",
    "HTML",
    "TypeScript",
    "esbuild",
    "hydro-js"
  ],
  "author": "Fabian Krutsch <f.krutsch@gmx.de> (https://krutsch.netlify.app/)",
  "license": "MIT",
  "devDependencies": {
    "@types/cssnano": "^4.0.0",
    "@types/glob": "^7.1.3",
    "@types/html-minifier": "^4.0.0",
    "@types/parse5": "^6.0.0",
    "@types/postcss-load-config": "^2.0.1",
    "typescript": "^4.1.3"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Krutsch/html-bundle.git"
  },
  "bugs": "https://github.com/Krutsch/html-bundle/issues",
  "dependencies": {
    "@web/parse5-utils": "^1.1.2",
    "chokidar": "^3.5.1",
    "critical": "^2.0.6",
    "cssnano": "^4.1.10",
    "esbuild": "^0.8.36",
    "fastify": "^3.11.0",
    "fastify-static": "^3.4.0",
    "glob": "^7.1.6",
    "html-minifier": "^4.0.0",
    "parse5": "^6.0.1",
    "postcss": "^8.2.4",
    "postcss-load-config": "^3.0.0"
  }
}
